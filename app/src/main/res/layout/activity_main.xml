            app:layout_constraintHorizontal_bias="0.036" android:textSize="20sp" android:textStyle="bold"
            android:textColor="#673AB7"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:inputType="numberDecimal"
            android:ems="10"
            android:textStyle="bold"
            android:id="@+id/editText"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:textSize="20sp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="16dp"
            app:layout_constraintHorizontal_bias="0.562" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            tools:ignore="Autofill"/>
    <TextView
            android:text="@string/down_payment"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:id="@+id/textView2" android:textSize="20sp"
            android:textStyle="bold" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/editText" android:layout_marginStart="16dp"
