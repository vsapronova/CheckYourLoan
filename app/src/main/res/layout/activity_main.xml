<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginLeft="5dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <TextView
        android:text="@string/loan_amount"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/textLoanAmount"
        android:textSize="20sp" android:textStyle="bold"
        android:textColor="#673AB7"/>
    <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal">

        <EditText
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:inputType="numberDecimal"
            android:ems="10"
            android:textStyle="bold"
            android:id="@+id/editLoanAmount"
            android:textSize="20sp"
            tools:ignore="Autofill"/>
        <ToggleButton
            android:layout_weight="0"
            android:text="@string/togglebutton"
            android:layout_marginTop="9dp"
            android:layout_width="56dp"
            android:layout_height="wrap_content"
            android:id="@+id/toggleLoanAmount"/>
    </LinearLayout>
    <TextView
        android:text="@string/down_payment"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/textDownPayment" android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#673AB7"/>
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:inputType="numberDecimal"
            android:ems="10"
            tools:ignore="Autofill"
            android:id="@+id/editDownPayment"
            android:textSize="20sp" android:textStyle="bold"
            android:layout_weight="1"/>
        <ToggleButton
            android:layout_weight="0"
            android:layout_marginTop="9dp"
            android:text="@string/togglebutton"
            android:layout_width="56dp"
            android:layout_height="wrap_content"
            android:id="@+id/toggleDownPayment"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="@string/interest_rate"
                android:id="@+id/textInterestRate"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#673AB7"/>
            <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="horizontal">
                <EditText
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:inputType="numberDecimal"
                        android:ems="10"
                        tools:ignore="Autofill"
                        android:id="@+id/editInterestRate"
                        android:textSize="20sp" android:textStyle="bold"/>
                <ToggleButton
                        android:layout_weight="0"
                        android:layout_marginTop="9dp"
                        android:layout_width="56dp"
                        android:text="@string/togglebutton"
                        android:layout_height="wrap_content"
                        android:id="@+id/toggleInterestRate"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="@string/loan_terms"
                android:id="@+id/textLoanTerms"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#673AB7"/>
            <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="horizontal">
                <EditText
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:inputType="numberDecimal"
                        android:ems="10"
                        tools:ignore="Autofill"
                        android:id="@+id/editLoanTerms"
                        android:textSize="20sp" android:textStyle="bold"/>
                <ToggleButton
                        android:layout_weight="0"
                        android:layout_marginTop="9dp"
                        android:layout_width="56dp"
                        android:text="@string/togglebutton"
                        android:layout_height="wrap_content"
                        android:id="@+id/toggleLoanTerms"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:text="@string/your_monthly_payment"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/textMontlyPayment" android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#673AB7"/>
    <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal">
        <EditText
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:inputType="numberDecimal"
            android:ems="10"
            tools:ignore="Autofill"
            android:id="@+id/editMonthlyPayment"
            android:textSize="20sp" android:textStyle="bold"/>
        <ToggleButton
            android:layout_weight="0"
            android:layout_marginTop="9dp"
            android:text="@string/togglebutton"
            android:layout_width="56dp"
            android:layout_height="wrap_content"
            android:id="@+id/toggleMonthlyPayment"/>
    </LinearLayout>

</LinearLayout>