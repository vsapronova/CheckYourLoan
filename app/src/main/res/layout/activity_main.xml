<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:text="@string/loan_amount"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:id="@+id/textLoanAmount" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" android:layout_marginTop="10dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp" android:layout_marginRight="16dp"
            app:layout_constraintHorizontal_bias="0.036" android:textSize="20sp" android:textStyle="bold"
            android:textColor="#673AB7"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:inputType="numberDecimal"
            android:ems="10"
            android:textStyle="bold"
            android:id="@+id/editLoanAmount"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:textSize="20sp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="16dp"
            app:layout_constraintHorizontal_bias="0.562" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textLoanAmount"
            tools:ignore="Autofill"/>
    <TextView
            android:text="@string/down_payment"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:id="@+id/textDownPayment" android:textSize="20sp"
            android:textStyle="bold" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/editLoanAmount" android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="16dp" android:textColor="#673AB7"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:inputType="numberDecimal"
            android:ems="10"
            tools:ignore="Autofill"
            android:id="@+id/editDownPayment"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textDownPayment" android:textSize="20sp" android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"/>
    <TextView
            android:layout_width="0dp" android:layout_height="30dp"
            android:text="@string/interest_rate"
            android:id="@+id/textInterestRate"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toBottomOf="@+id/editDownPayment"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:textColor="#673AB7"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:inputType="numberDecimal"
            android:ems="10"
            tools:ignore="Autofill"
            android:id="@+id/editInterestRate"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textInterestRate" android:textSize="20sp" android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"/>
    <TextView
            android:layout_width="0dp" android:layout_height="30dp"
            android:text="@string/loan_terms"
            android:id="@+id/textLoanTerms"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toBottomOf="@+id/editInterestRate"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:textColor="#673AB7"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:inputType="numberDecimal"
            android:ems="10"
            tools:ignore="Autofill"
            android:id="@+id/editLoanTerms"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textLoanTerms" android:textSize="20sp" android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"/>
    <TextView
            android:text="@string/your_monthly_payment"
            android:layout_width="0dp" android:layout_height="30dp"
            android:id="@+id/textMontlyPayment" android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toBottomOf="@+id/editLoanTerms"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:textColor="#673AB7"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:inputType="numberDecimal"
            android:ems="10"
            tools:ignore="Autofill"
            android:id="@+id/editMonthlyPayment"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textMontlyPayment" android:textSize="20sp" android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"/>
    <ToggleButton
            android:text="@string/togglebutton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/toggleLoanAmount" android:layout_marginEnd="16dp" android:layout_marginRight="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/textLoanAmount"/>
    <ToggleButton
            android:text="@string/togglebutton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/toggleDownPayment" android:layout_marginEnd="16dp" android:layout_marginRight="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/textDownPayment"/>
    <ToggleButton
            android:text="@string/togglebutton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/toggleInterestRate" android:layout_marginEnd="16dp" android:layout_marginRight="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/textInterestRate"/>
    <ToggleButton
            android:text="@string/togglebutton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/toggleLoanTerms" android:layout_marginEnd="16dp" android:layout_marginRight="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/textLoanTerms"/>
    <ToggleButton
            android:text="@string/togglebutton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/toggleMonthlyPayment" android:layout_marginEnd="16dp" android:layout_marginRight="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/textMontlyPayment"/>



</android.support.constraint.ConstraintLayout>