<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginLeft="5dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <TextView
            android:text="@string/loan_amount"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="bottom|left"
            android:layout_marginLeft="55dp"
            android:id="@+id/textLoanAmount"
            android:textSize="15sp" android:textStyle="bold"
            android:textColor="#673AB7"/>
    <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal">
        <ToggleButton
            android:layout_weight="0"
            android:text="@string/togglebutton"
            android:layout_marginTop="6dp"
            android:layout_width="56dp"
            android:layout_height="wrap_content"
            android:id="@+id/toggleLoanAmount"/>
        <EditText
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:inputType="numberDecimal"

            android:digits="0123456789,"
            android:singleLine="true"
            android:ems="10"
            android:textStyle="bold"
            android:id="@+id/editLoanAmount"
            android:textSize="20sp"
            tools:ignore="Autofill"/>

    </LinearLayout>
    <TextView
        android:text="@string/down_payment"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="55dp"
        android:id="@+id/textDownPayment" android:textSize="15sp"
        android:gravity="bottom|left"
        android:textStyle="bold"
        android:textColor="#673AB7"/>
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal">
        <ToggleButton
            android:layout_weight="0"
            android:layout_marginTop="6dp"
            android:text="@string/togglebutton"
            android:layout_width="56dp"
            android:layout_height="wrap_content"
            android:id="@+id/toggleDownPayment"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:inputType="numberDecimal"
            android:singleLine="true"
            android:ems="10"
            tools:ignore="Autofill"
            android:id="@+id/editDownPayment"
            android:textSize="20sp" android:textStyle="bold"
            android:layout_weight="1"/>

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="55dp"
        android:text="@string/interest_rate"
        android:id="@+id/textInterestRate"
        android:gravity="bottom|left"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="#673AB7"/>
    <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal">
        <ToggleButton
            android:layout_weight="0"
            android:layout_width="56dp"
            android:layout_marginTop="6dp"
            android:text="@string/togglebutton"
            android:layout_height="wrap_content"
            android:id="@+id/toggleInterestRate"/>
        <EditText
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:inputType="numberDecimal"
                android:singleLine="true"
                android:ems="10"
                tools:ignore="Autofill"
                android:id="@+id/editInterestRate"
                android:textSize="20sp" android:textStyle="bold"/>

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="55dp"
        android:text="@string/loan_terms"
        android:id="@+id/textLoanTerms"
        android:gravity="bottom|left"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="#673AB7"/>
    <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal">
        <ToggleButton
                android:layout_weight="0"
                android:layout_width="56dp"
                android:layout_marginTop="6dp"
                android:text="@string/togglebutton"
                android:layout_height="wrap_content"
                android:id="@+id/toggleLoanTerms"/>
        <EditText
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:inputType="numberDecimal"
                android:singleLine="true"
                android:ems="10"
                tools:ignore="Autofill"
                android:id="@+id/editLoanTerms"
                android:textSize="20sp" android:textStyle="bold"/>
        <Spinner android:layout_width="120dp"
                 android:layout_height="56dp"
                 android:id="@+id/spinnerTerms">
        </Spinner>
    </LinearLayout>
    <TextView
        android:text="@string/your_monthly_payment"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="55dp"
        android:id="@+id/textMontlyPayment"
        android:gravity="bottom|left"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="#673AB7"/>
    <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal">
        <ToggleButton
            android:layout_weight="0"
            android:layout_marginTop="6dp"
            android:text="@string/togglebutton"
            android:layout_width="56dp"
            android:layout_height="wrap_content"
            android:id="@+id/toggleMonthlyPayment"/>
        <EditText
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:inputType="numberDecimal"
            android:singleLine="true"
            android:ems="10"
            tools:ignore="Autofill"
            android:id="@+id/editMonthlyPayment"
            android:textSize="20sp" android:textStyle="bold"/>

    </LinearLayout>

</LinearLayout>