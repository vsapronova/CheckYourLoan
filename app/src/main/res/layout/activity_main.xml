            android:layout_marginRight="16dp"
            app:layout_constraintTop_toBottomOf="@+id/editText4"
            android:textSize="25sp" android:textStyle="bold"
            android:layout_marginTop="16dp" android:textColor="#673AB7"/>
    <EditText
            android:layout_width="137dp"
            android:layout_height="56dp"
            android:id="@+id/editText5" android:textSize="30sp"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/textView5"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"/>
    <ToggleButton
            android:text="@string/togglebutton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/toggleButton1" android:layout_marginEnd="16dp" android:layout_marginRight="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/textView"/>
    <ToggleButton
            android:text="@string/togglebutton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/toggleButton2" android:layout_marginEnd="16dp" android:layout_marginRight="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2"/>
    <ToggleButton
            android:text="@string/togglebutton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/toggleButton3" android:layout_marginEnd="16dp" android:layout_marginRight="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3"/>
    <ToggleButton
            android:text="@string/togglebutton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/toggleButton4" android:layout_marginEnd="16dp" android:layout_marginRight="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/textView4"/>



